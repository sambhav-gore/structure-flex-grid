{
  "compilerOptions": {
    "baseUrl": "./docs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "core-js",
      "node"
    ]
  },


  "exclude": [
    "node_modules",
    "build",
    "tmp",
    "typings"
  ],

  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
